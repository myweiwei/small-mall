.my-container{
  width: 100%;
  height: 100%;
  background-color: #FFF;
} 
.swiper{
  height: 500rpx;
}
.swiper-item-images{
  width: 100%;
}
.share { 
  height: 120rpx;
  width: 120rpx;
  position: fixed;
  bottom: 600rpx;
  right: 0rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 50%;
  z-index: 10;
} 
.share image {
  height: 40rpx;
  width: 40rpx;
}
.share text {
  margin-top: 2rpx;
  font-weight: bold;
  color:rgb(151, 151, 151);
}

.share button {
  position: absolute;
  height: 100%;
  width: 100%;
  opacity: 0.1;
  z-index: 99;
}




.price{
  font-size: 40rpx;
  color: red;
}
.introduce{
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.choosen .btnList {
  position: fixed;
  bottom:10rpx;
  width:90%;
}
.choosen .add_car,.choosen .buy_now {
  font-weight: 200;
