
.boxContainer {
  width: 100%;
  height: 100%;
}
.van-tab__pane--active {
  height:1200rpx!important;
}
.order-item {
  width: 100%;
  height: 360rpx;
  background-color: #FFF;
  border-radius: 50rpx;
  margin-top: 20rpx;
  box-sizing: border-box;
}
.top{
  display: flex;
  justify-content:space-between;
  margin-bottom: 10rpx;
}
.top-icon {
  width: 50rpx;
  height: 50rpx;
  margin-left: 50rpx;
  margin-top: 30rpx;
}
.wait-pay-text {
  margin-top: 30rpx;
  margin-right: 20rpx;
  font-size: 32rpx;
  color: red;
}
.middle{
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between; 
  align-items: center;     /* 垂直居中 */
  position:relative;
  box-sizing: border-box;
}
.middle-image{
  margin-left: 50rpx;
  height:150rpx;
  box-sizing: border-box;
}
.middle-image-size{
  width:150rpx;
  height:150rpx;
  padding-right: 20rpx;
}
.product-name {
  font-size: 30rpx;
  padding-left: 10rpx;
  width:250rpx;
  box-sizing: border-box;
}
.imageList {
  padding-left: 50rpx;
  display: flex;
  justify-content:flex-start;
  align-items: center;
}

.money-count,.money-count1{
  background: rgb(255,255,255,0.7);
  text-align: right;
  box-sizing: border-box;
  padding: 20rpx;
}
.money-count1{
  position:absolute;
  top:0;
  right:0rpx;
  z-index:3;
  box-shadow: -4px 0 2px 0px rgba(133, 133, 133,0.2);
  height: 150rpx;
}
.money{
  font-size: 39rpx;
}
.count{
  font-size: 29rpx;
  color: rgb(133, 133, 133);
  margin-left: auto;
}
.scroll {
  width:100%;
  height:150rpx;
  white-space:nowrap;
  padding-left:50rpx;
  padding-right:150rpx;
  box-sizing:border-box;
}

.xs{
  font-size: 30rpx;
}
.fh{
  font-size:25rpx;
}

.deleteOrder-icon
{
  width: 40rpx;
  height: 40rpx;
}

.pay-button{
  width: 100rpx;
  padding:10rpx 20rpx;
  border:0.1rpx solid red;
  border-radius:50rpx;
  font-size:25rpx;
  margin-left:auto;
  margin-right: 20rpx;
  margin-top: 30rpx;
  color: red;
}
.myslide{
  width:100%;
  height:100%;
}
  