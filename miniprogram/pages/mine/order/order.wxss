
.boxContainer {
  width: 100%;
  height: 100%;
}
.auto-min-height {
  min-height: calc(90vh);
  width: 100%;
}


.order-item {
  width: 100%;
  height: 400rpx;
  background-color: #FFF;
  border-radius: 50rpx;
  margin-top: 20rpx;
}
.top{
  display: flex;
  justify-content:space-between;
  margin-bottom: 10rpx;
}
.top-icon {
  width: 50rpx;
  height: 50rpx;
  margin-left: 50rpx;
  margin-top: 30rpx;
}
.wait-pay-text {
  margin-top: 30rpx;
  margin-right: 50rpx;
  font-size: 32rpx;
  color: red;
}
.middle{
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between; 
  align-items: center;     /* 垂直居中 */
}
.middle-image{
  margin-left: 50rpx;
  height:150rpx;
  display: flex;
  align-items: center;     /* 垂直居中 */
  flex: 0 0 67%;
  overflow-x:scroll;
  overflow-y:hidden;
  /* overflow: hidden; */
}
.middle-image-size{
  width:150rpx;
  height:150rpx;
  margin-right: 20rpx;
}
.product-name {
  flex: 0 0 60%;
  font-size: 26rpx;
  margin-left: 10rpx;
}


.money-count{
  display:flex;
  flex-direction: column;
  margin-right: 50rpx;
}
.money{
  font-size: 39rpx;
}
.count{
  font-size: 29rpx;
  color: rgb(133, 133, 133);
  margin-left: auto;
}
.xs{
  font-size: 30rpx;
}
.deleteOrder-icon
{
  width: 40rpx;
  height: 40rpx;
}

.pay-button{
  width: 100rpx;
  padding:15rpx 25rpx;
  border:0.1rpx solid red;
  border-radius:50rpx;
  font-size:25rpx;
  margin-left:auto;
  margin-right: 50rpx;
  margin-top: 30rpx;
  color: red;
}
.myslide{
  width:100%;
  height:100%;
}
  