.contentBox {
  background: #fff;
  width:100%;
  height: 100%;
}
.pay {
  width:100%;
  height: 300rpx;
  position: absolute;
  top:40%;
  transform: translateY(-50%);
  color:rgb(97, 92, 92);
} 
.flexBox {
  justify-content: center;
}
.payBox image {
  width:200rpx;
  height:200rpx;
}
.payBox .line {
  margin-left:20rpx;
  height:50rpx;
  line-height: 50rpx;
  font-size:30rpx;
}
.btn {
  margin-top:50rpx;
}
.btn text{
  margin-left:20rpx;
}
.btn text{
  padding:0 25rpx;
  border:2rpx solid rgb(97, 92, 92);
  border-radius:10rpx;
  font-size:35rpx;
  height:80rpx;
  line-height: 80rpx;
  text-align: center;
}