.boxContainer {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  overflow-y: auto;
}

/*---------------地址--------------------------*/
.top{
  width:100%;
  background: #FFF;
  border-radius: 19rpx;
  color:#000;
  padding:40rpx;
  font-size: 25rpx;
  box-sizing: border-box;
  border-bottom:1rpx dashed #fff;
  margin-bottom:10rpx;
}
.top .icon {
  font-weight:700;
}
.address view {
  height:40rpx;
  line-height: 40rpx;
}
.address .neighbourhood {
  font-size:30rpx;
  font-weight:700;
}
.footer {
  position: fixed;
  bottom:0;
  left:0;
  width:100%;
  height:80rpx;
  background:#fff;
  padding:0 20rpx;
  line-height:80rpx;
  box-sizing: border-box;
}
.footer .price {
  font-size:40rpx;
  font-weight:700;
  color:#d34248;
}
.footer .price text {
  font-size:25rpx;
}
.footer .btn {
  background:linear-gradient(to right, #f50704 25%, #fd2808 50%,#ff3b11 75%,#fd4c16 100% );
  color:#fff;
  font-weight:normal;
  border-radius:50rpx;
  font-size:25rpx;
  width:200rpx;
  height:60rpx;
  line-height: 60rpx;
  text-align: center;
}
.orderBox {
  height:200rpx;
  background: #fff;
  padding:20rpx;
  box-sizing: border-box;
}
.orderBox image {
  width:140rpx;
  height:140rpx;
  border-radius:5rpx;
}
.cen .orderBox.flexBox {
  justify-content: flex-start;
}
.orderBox .img {
  width:140rpx;
}
.orderBox .info {
  flex:1;
}
.orderBox .currentUnitPrice {
  font-size:30rpx;
  font-weight:700;
  color:#d34248;
}
.orderBox .currentUnitPrice text {
  font-size:22rpx;
}
.orderBox .number,.orderBox .productSpec {
  font-size:25rpx;
  color:#9e9e9e;
}
.orderBox .number text{
  font-weight:700;
  font-size:30rpx;
  color:#000;
}



