/* pages/comment/comment.wxss */
.comment-top {
  width:100%;
  height:400rpx;
  filter: blur(40rpx);
  opacity: 0.4;
}
.comment-mask {
  position: absolute;
  width:100%;
  height:400rpx;
  top:0;
  left:0;
  z-index: -1;
  background-color: #333;
}
.common-info {
  position:absolute;
  top:0;
  left:0;
  height:400rpx;
  display: flex;
  align-items: top;
  padding:20rpx;
}
.common-content {
  margin-left:30rpx;
}
.common-info image {
  width:280rpx;
  height:350rpx;
}
.common-info text {
  color:#fff; 
  flex:1;
  height:50rpx;
  line-height: 50rpx;
}
.original_title {
  font-size: 40rpx;
  font-weight: bolder;
}
.title,.country,.writers {
  font-size:25rpx;
}
.average {
  font-size: 30rpx;
  color:#f0c735!important;
  font-weight: bolder;  
}
.summary {
  padding:20rpx;
  font-size:25rpx;
}
.common-img {
  width:200rpx;
  height: 200rpx;
  margin-right:20rpx;
}